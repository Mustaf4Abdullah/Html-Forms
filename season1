int main()
{
    int n=7 ;
    for (int i=0;i<n;i++){
        for (int j=0;j<2*n;j++)
        {
            if (i==0 ||i==n)
                cout<<"1";
            else if(i==j || i+j==n)
                cout<<"2";
                else if ((i+j>=n) &&((i<n/2)))
                    cout<<"3";
                    else if ((i+j<=n) &&(i>(n/2)))
                    cout<<"4";
                    else
                        cout<<"0";
        }
        cout<<endl;
    }


}
